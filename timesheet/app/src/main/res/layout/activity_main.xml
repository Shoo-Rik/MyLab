<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.shoorik.timesheet.client.MainActivity">

    <LinearLayout
        android:id="@+id/title"
        style="@style/GeneralRow">

        <TextView
            style="@style/Title"
            android:text="My timesheet"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/line3"
        app:layout_constraintTop_toBottomOf="@+id/title"
        style="@style/GeneralRow">

        <TextView
            android:id="@+id/periodText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10px"
            android:textSize="22dp"
            android:text="Week View (@+id/WeekFirstDay - @+id/WeekLastDay)"
            />
    </LinearLayout>

    <TableLayout
        android:id="@+id/weekTable"
        app:layout_constraintTop_toBottomOf="@+id/line3"
        style="@style/GeneralRow">

        <TableRow>
            <TextView
                style="@style/ColumnHeaderText"
                android:text="Day"
                />
            <TextView
                style="@style/ColumnHeaderText"
                android:text="Start"
                />
            <TextView
                style="@style/ColumnHeaderText"
                android:text="Finish"
                />
            <TextView
                style="@style/ColumnHeaderText"
                android:text="Duration"
                />
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/MondayText"
                style="@style/RowText"
                android:text="Monday"
                />
            <Button
                android:id="@+id/MondayStartText"
                style="@style/TimeButton"
                android:text="@string/unknownTime"
                android:onClick="onClickStartButton"
                />
            <Button
                android:id="@+id/MondayEndText"
                style="@style/TimeButton"
                android:text="@string/unknownTime"
                android:onClick="onClickEndButton"
                />
            <TextView
                android:id="@+id/MondayDurationText"
                style="@style/RowText"
                android:text="@string/unknownTime"
                />
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/TuesdayText"
                style="@style/RowText"
                android:text="Tuesday"
                />
            <Button
                android:id="@+id/TuesdayStartText"
                style="@style/TimeButton"
                android:text="@string/unknownTime"
                android:onClick="onClickStartButton"
                />
            <Button
                android:id="@+id/TuesdayEndText"
                style="@style/TimeButton"
                android:text="@string/unknownTime"
                android:onClick="onClickEndButton"
                />
            <TextView
                android:id="@+id/TuesdayDurationText"
                style="@style/RowText"
                android:text="@string/unknownTime"
                />
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/WednesdayText"
                style="@style/RowText"
                android:text="Wednesday"
                />
            <Button
                android:id="@+id/WednesdayStartText"
                style="@style/TimeButton"
                android:text="@string/unknownTime"
                android:onClick="onClickStartButton"
                />
            <Button
                android:id="@+id/WednesdayEndText"
                style="@style/TimeButton"
                android:text="@string/unknownTime"
                android:onClick="onClickEndButton"
                />
            <TextView
                android:id="@+id/WednesdayDurationText"
                style="@style/RowText"
                android:text="@string/unknownTime"
                />
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/ThursdayText"
                style="@style/RowText"
                android:text="Thursday"
                />
            <Button
                android:id="@+id/ThursdayStartText"
                style="@style/TimeButton"
                android:text="@string/unknownTime"
                android:onClick="onClickStartButton"
                />
            <Button
                android:id="@+id/ThursdayEndText"
                style="@style/TimeButton"
                android:text="@string/unknownTime"
                android:onClick="onClickEndButton"
                />
            <TextView
                android:id="@+id/ThursdayDurationText"
                style="@style/RowText"
                android:text="@string/unknownTime"
                />
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/FridayText"
                style="@style/RowText"
                android:text="Friday"
                />
            <Button
                android:id="@+id/FridayStartText"
                style="@style/TimeButton"
                android:text="@string/unknownTime"
                android:onClick="onClickStartButton"
                />
            <Button
                android:id="@+id/FridayEndText"
                style="@style/TimeButton"
                android:text="@string/unknownTime"
                android:onClick="onClickEndButton"
                />
            <TextView
                android:id="@+id/FridayDurationText"
                style="@style/RowText"
                android:text="@string/unknownTime"
                />
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/SaturdayText"
                style="@style/RowText"
                android:text="Saturday"
                />
            <Button
                android:id="@+id/SaturdayStartText"
                style="@style/TimeButton"
                android:text="@string/unknownTime"
                android:onClick="onClickStartButton"
                />
            <Button
                android:id="@+id/SaturdayEndText"
                style="@style/TimeButton"
                android:text="@string/unknownTime"
                android:onClick="onClickEndButton"
                />
            <TextView
                android:id="@+id/SaturdayDurationText"
                style="@style/RowText"
                android:text="@string/unknownTime"
                />
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/SundayText"
                style="@style/RowText"
                android:text="Sunday"
                />
            <Button
                android:id="@+id/SundayStartText"
                style="@style/TimeButton"
                android:text="@string/unknownTime"
                android:onClick="onClickStartButton"
                />
            <Button
                android:id="@+id/SundayEndText"
                style="@style/TimeButton"
                android:text="@string/unknownTime"
                android:onClick="onClickEndButton"
                />
            <TextView
                android:id="@+id/SundayDurationText"
                style="@style/RowText"
                android:text="@string/unknownTime"
                />
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:id="@+id/balance"
        app:layout_constraintTop_toBottomOf="@+id/weekTable"
        style="@style/GeneralRow">

        <TextView
            android:id="@+id/WeekBalanceText"
            style="@style/BalanceRow"
            android:text="WeekBalance:"
            />
        <TextView
            android:id="@+id/WeekBalance"
            style="@style/BalanceRow"
            android:text="@string/unknownTime"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/line1"
        app:layout_constraintTop_toBottomOf="@+id/balance"
        style="@style/GeneralRow">

        <TextView
            android:id="@+id/normalStartTime"
            style="@style/CurrentTime"
            android:text="10:00"
            />
        <Button
            android:id="@+id/startWorkDay"
            style="@style/CurrentTime"
            android:text="@string/start"
            android:onClick="onClickStartButton"
            />
        <TextView
            android:id="@+id/startText"
            style="@style/CurrentTime"
            android:text="This is text view"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/line2"
        app:layout_constraintTop_toBottomOf="@+id/line1"
        style="@style/GeneralRow">

        <TextView
            android:id="@+id/normalEndTime"
            style="@style/CurrentTime"
            android:text="19:00"
            />
        <Button
            android:id="@+id/endWorkDay"
            style="@style/CurrentTime"
            android:text="@string/end"
            android:onClick="onClickEndButton"
            />
        <TextView
            android:id="@+id/endText"
            style="@style/CurrentTime"
            android:text="This is text view"
            />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
